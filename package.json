{
  "name": "given",
  "version": "0.0.0",
  "author": {
    "name": "Shai Reznik",
    "company": "HiRez.io"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "change": "changeset",
    "build": "lerna run build",
    "format:fix": "pretty-quick --staged",
    "lint": "eslint . --ext .js,.ts",
    "release": "changeset publish",
    "release.pkg-pr-new": "pnpm dlx pkg-pr-new publish --pnpm --compact './packages/*'",
    "test": "run-s test:jasmine:coverage test:jest",
    "test:full": "run-s lint test",
    "test:jasmine": "ts-node --project packages/jasmine-given/tsconfig.json -r tsconfig-paths/register node_modules/jasmine/bin/jasmine.js JASMINE_CONFIG_PATH=packages/jasmine-given/jasmine.json",
    "test:jasmine:coverage": "nyc -r lcov --r text-summary  -e .ts -x \"**/*.spec.ts\" pnpm test:jasmine",
    "test:jasmine:watch": "nodemon --ext ts --watch \"shared/given-core/**/*.ts\" --watch \"packages/jasmine-given/**/*.ts\" --exec \"pnpm test:jasmine:coverage\"",
    "test:jest": "jest -c packages/jest-given/jest.config.js",
    "test:jest:watch": "jest -c packages/jest-given/jest.config.js --watchAll",
    "update-core-hash": "node update-core-hash"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm format:fix",
      "post-commit": "pnpm update-core-hash"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@changesets/get-github-info": "^0.6.0",
    "@changesets/types": "^6.1.0",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/jasmine": "5.1.9",
    "@types/jest": "30.0.0",
    "@types/node": "24.5.1",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "cpy-cli": "6.0.0",
    "dotenv": "^17.2.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "10.1.8",
    "execa": "9.6.0",
    "husky": "9.1.7",
    "jasmine": "5.10.0",
    "jest": "30.1.3",
    "karma": "6.4.0",
    "karma-chrome-launcher": "3.1.1",
    "karma-jasmine": "5.1.0",
    "lerna": "^9.0.0",
    "microbundle": "0.15.1",
    "nodemon": "3.1.10",
    "npm-run-all": "4.1.5",
    "npm-run-path": "6.0.0",
    "nyc": "17.1.0",
    "prettier": "3.6.2",
    "pretty-quick": "4.2.2",
    "rimraf": "6.0.1",
    "source-map-support": "0.5.21",
    "ts-jest": "29.4.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2"
  }
}
