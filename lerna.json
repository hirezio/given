{
  "packages": ["packages/*"],
  "npmClient": "pnpm",
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "version": {
      "conventionalCommits": true,
      "push": true,
      "gitTagVersion": true,
      "createRelease": "github",
      "allowBranch": "master",
      "message": "chore(release): publish new version"
    }
  },
  "ignoreChanges": ["**/*.md", "**/*.spec.ts", "**/*.spec.js", "**/.all-contributorsrc"],
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
